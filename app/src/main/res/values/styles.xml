<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:editTextColor">#FFFFFF</item>

    </style>
    <style name="AppLightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">true</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:editTextColor">#FFFFFF</item>

    </style>
    //Estilo da Splash Screen
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>
    //Estilo dos inputs de texto
    <style name="CustomInput">
        <item name="android:textSize">13sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/round_input</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColorHint">#C4C4C3</item>

    </style>
    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:fontFamily">@font/overpass_font_family</item>
        <item name="android:textSize">15dp</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>

    </style>
    <style name="CustomText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:paddingStart">0dp</item>
    </style>
</resources>